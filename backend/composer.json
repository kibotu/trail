{
    "name": "kibotu/trail-backend",
    "description": "Trail - Link Journal Backend API",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "firebase/php-jwt": "^6.10",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Trail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trail\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
