<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Trail" parent="android:Theme.Material.Light.NoActionBar">
        
        <!-- Ensure transparent system bars for proper edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Android 12+ specific: Disable window splash screen for faster startup -->
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
    </style>
</resources>
